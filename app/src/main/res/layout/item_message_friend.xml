<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="5dp"
    android:background="@drawable/message_friend_bg"
    android:layout_gravity="left">

    <TextView
        android:id="@+id/item_message_friend_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:10"
        android:gravity="end"
        android:padding="4dp"
        android:textSize="12sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

    <TextView
        android:id="@+id/item_message_friend_messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you?"
        android:layout_below="@+id/item_message_friend_timestamp"
        android:padding="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
</RelativeLayout>